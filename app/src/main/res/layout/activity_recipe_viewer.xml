<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="presentation.RecipeViewerActivity">

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_name_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeSkillLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_skill_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_description_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_ingredients_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipePrepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_prep_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeCookTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_cook_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_instructions_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

    <TextView
        android:id="@+id/recipeCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipe_categories_hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#78909C" />

</LinearLayout>
